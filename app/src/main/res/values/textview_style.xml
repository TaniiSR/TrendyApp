<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Trendy.Widget.TextView.Black" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">@style/Trendy.TextAppearance.TextView</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/taBlackColor</item>
        <item name="android:lineSpacingExtra">6sp</item>
    </style>

    <style name="Trendy.TextAppearance.TextView" parent="">
        <item name="fontFamily">@font/ta_roboto_regular</item>
        <item name="font">@font/ta_roboto_regular</item>
        <item name="android:fontFamily">@font/ta_roboto_regular</item>
        <item name="android:font" tools:targetApi="o">@font/ta_roboto_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="Trendy.Widget.TextView.BlackColor.XLarge" parent="Trendy.Widget.TextView.Black">
        <item name="android:textSize">@dimen/ta_text_size_h3</item>
    </style>

    <style name="Trendy.Widget.TextView.BlackColor.Large" parent="Trendy.Widget.TextView.Black">
        <item name="android:textSize">@dimen/ta_text_size_h5</item>
    </style>

    <style name="Trendy.Widget.TextView.BlackColor.Medium" parent="Trendy.Widget.TextView.Black">
        <item name="android:textSize">@dimen/ta_text_size_h6</item>
    </style>

    <style name="Trendy.Widget.TextView.BlackColor.Small" parent="Trendy.Widget.TextView.Black">
        <item name="android:textSize">@dimen/ta_text_size_h7</item>
    </style>

    <style name="Trendy.Widget.TextView.BlackColor.XSmall" parent="Trendy.Widget.TextView.Black">
        <item name="android:textSize">@dimen/ta_text_size_h8</item>
    </style>


</resources>
